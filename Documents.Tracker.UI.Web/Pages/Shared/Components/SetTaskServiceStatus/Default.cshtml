@model int


@using TodoTasksCore = global::TodoTasks.Commons.TaskEnums

@{
    var cntlname = ViewContext.RouteData.Values["Page"].ToString();
    var TaskStatusEnums = Html.GetEnumSelectList<TodoTasksCore.TaskStatus>();
    var taskServiceId = Model;
}
  


        <button class="btn btn-sm btn-warning dropdown-toggle" id="dropdownMenu2" type="button" data-toggle="dropdown">Set Status</button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
            @*<button class="dropdown-item" type="button">Checking</button> <button class="dropdown-item" type="button">Reject</button>*@

            <div class="col-lg-12">

                @foreach (var item in TaskStatusEnums.ToList())
                {
                    <button type="submit" class="dropdown-item"
                            asp-page="AddTasks" asp-page-handler="SetTaskServiceStatus" asp-route-TaskServiceId="@taskServiceId" asp-route-statusid="@item.Value">
                        @item.Text
                    </button>
                }

            </div>

        </div>
    
