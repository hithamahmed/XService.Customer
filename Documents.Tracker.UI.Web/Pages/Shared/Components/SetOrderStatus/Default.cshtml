@*@model Documents.Tracker.UI.Web.SharedComponents.OrderComponent*@
@model string


@using OrdersCore = global::Orders.Core.OrderExt

@{
    var cntlname = ViewContext.RouteData.Values["Page"].ToString();
    var OrderStatusEnums = Html.GetEnumSelectList<OrdersCore.OrderStatusEnums>();
    var okey = Model.ToString();
}

<button class="btn btn-lg btn-warning dropdown-toggle" id="dropdownMenu2" type="button" data-toggle="dropdown">Set Status</button>
<div class="dropdown-menu" aria-labelledby="dropdownMenu2">
    @*<button class="dropdown-item" type="button">Checking</button> <button class="dropdown-item" type="button">Reject</button>*@

    <div class="col-lg-12">

        @foreach (var item in OrderStatusEnums.ToList())
        {
            <button type="submit" class="dropdown-item"
            asp-page="OrderDetails" asp-page-handler="SetOrderStatus" asp-route-Orderkey="@okey" asp-route-statusid="@item.Value">
                @item.Text
                </button>
            }

    </div>

</div>
