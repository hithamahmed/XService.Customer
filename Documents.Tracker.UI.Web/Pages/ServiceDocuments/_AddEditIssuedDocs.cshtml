
@model  Documents.Tracker.Core.DTO.ServiceIssuedDocumentsDTO

    <form class="kt-form kt-form--label-right" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="RefId " />
        <input type="hidden" asp-for="ServiceId " />

        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Full Name:</label>
                    <input asp-for="Name" class="form-control" placeholder="ex: Civil Copy, Passport Copy">
                    <span class="form-text text-muted">Document name</span>
                </div>

                <div class="col-lg-12">
                    <label>Service Price:</label>
                    <input asp-for="Description"  class="form-control" placeholder="ex: Civil Copy, Passport Copy">
                    <span class="form-text text-muted">Document Description</span>
                </div>

            </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-6">
                        <button id="btnPost" asp-page-handler="SaveServiceIssuedDocs" type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


 