
@model  Documents.Tracker.Core.DTO.CategoriesOTO

    <form class="kt-form kt-form--label-right" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="RefId " />

        <div class="kt-portlet__body">
            <div class="form-group row">
               

                <div class="col-lg-12">
                    <label>Parent Category:</label>
                    <select required asp-for="ParentCategoryId" class="form-control" asp-items="@(new SelectList(Model.SubCategories, "RefId", "Name"))">
                        <option value="0" class="font-weight-bold">No Parent</option>
                    </select>
                    
                </div>
                <div class="col-lg-12">
                    <label>Category Name:</label>
                    <input asp-for="Name" required class="form-control" placeholder="ex: Legal, Private, Government, Foods">
                    
                </div>

                <div class="col-lg-12">
                    <label>Description:</label>
                    <input asp-for="Description" class="form-control" placeholder="ex: short brief about me">
                    
                </div>
                <div class="col-lg-12">
                    <label>Image Url:</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="ex:http:\\image.to.path\image.jpg">
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-6">
                        <button id="btnPost"  asp-page-handler="SaveCategory" type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


 