
@model  General.Services.Core.DTO.CategoryDTO

    <form class="kt-form kt-form--label-right" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="RefId " />

        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Full Name:</label>
                    <input asp-for="Name" class="form-control" placeholder="ex: Legal, Private, Government, Foods">
                    <span class="form-text text-muted">Category name</span>
                </div>

                <div class="col-lg-12">
                    <label>Full Name:</label>
                    <input asp-for="Description" class="form-control" placeholder="ex: short brief about me">
                    <span class="form-text text-muted">Description</span>
                </div>
                <div class="col-lg-12">
                    <label>Icon Name:</label>
                    <input asp-for="IconName" class="form-control" placeholder="ex: Legal, Private, Government, Foods">
                    <span class="form-text text-muted">Icon name</span>
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-6">
                        <button id="btnPost"  asp-page-handler="SaveCategory" type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


 