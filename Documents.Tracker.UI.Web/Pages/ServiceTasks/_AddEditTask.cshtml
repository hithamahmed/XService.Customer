
@model  TodoTasks.Commons.DTO.TasksDTO

    <form class="kt-form kt-form--label-right" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="Id " />

        <div class="kt-portlet__body">
            <div class="form-group row">

                <div class="col-lg-12">
                    <label>Title:</label>
                    <input asp-for="Title" required class="form-control">
                </div>
                @*<div class="col-lg-12">
                    <label>Parent Category:</label>
                    <select required asp-for="AssignedUserID" class="form-control" asp-items="@(new SelectList(Model.SubCategories, "RefId", "Name"))">
                        <option value="0" class="font-weight-bold">Select Employee</option>
                    </select>
                </div>*@
                <div class="col-lg-12">
                    <label>Due Date:</label>
                    <input type="date" asp-for="DueDate" required class="form-control">
                </div>

                @*<div class="col-lg-12">
                    <label>Parent Category:</label>
                    <select required asp-for="AssignedUserID" class="form-control" asp-items="@(new SelectList(Model.SubCategories, "RefId", "Name"))">
                        <option value="0" class="font-weight-bold">Select Employee</option>
                    </select>
                </div>*@

                <div class="col-lg-12">
                    <label>Note:</label>
                    <textarea asp-for="Notes" required class="form-control" rows="5" />
                </div>

            </div>

              <div class="form-group row">
                    <div class="col-lg-6">
                        <label>Started Date:</label>
                        <input readonly type="datetime" asp-for="StartedAt" required class="form-control">
                    </div>

                    <div class="col-lg-6">
                        <label>Closed Date:</label>
                        <input readonly type="datetime" asp-for="ClosedAt" required class="form-control">
                    </div>
                </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-6">
                        <button id="btnPost"  asp-page-handler="SaveTask" type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


 