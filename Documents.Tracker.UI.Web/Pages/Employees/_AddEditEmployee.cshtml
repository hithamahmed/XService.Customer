
@model  Documents.Tracker.Core.DTO.Employees.EmployeeOTO

    <form class="kt-form kt-form--label-right" method="post" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="Id " />

        <div class="kt-portlet__body">
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>First Name:</label>
                    <input asp-for="FirstName" required class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Last Name:</label>
                    <input asp-for="LastName" required class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">
                    <label>Mobile:</label>
                    <input asp-for="MobileNumber" required class="form-control">
                </div>
            </div>
            <div class="form-group row">

                <div class="col-lg-4">
                    <div class="kt-checkbox-inline">
                        <label class="kt-checkbox">
                            <input asp-for="IsBlocked" type="checkbox"> Blocked
                            <span></span>
                        </label>
                        @*<label class="kt-checkbox">
                        <input type="checkbox"> Option 2
                        <span></span>
                    </label>
                    <label class="kt-checkbox">
                        <input type="checkbox"> Option 3
                        <span></span>
                    </label>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="kt-portlet__foot">
            <div class="kt-form__actions">
                <div class="row">
                    <div class="col-lg-6">
                        <button id="btnPost"  asp-page-handler="SaveEmployee" type="submit" class="btn btn-primary">Save</button>
                        <button type="reset" class="btn btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


 